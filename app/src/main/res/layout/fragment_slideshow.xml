<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- My Cart Header -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Cart"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"/>

        <!-- Cart Item 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/gems5"
                android:contentDescription="Lapis Hoop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lapis Hoop"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$578.90"
                    android:textColor="#388E3C"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clocks, wall"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <Button android:text="-" android:layout_width="40dp" android:layout_height="40dp"/>
                <TextView android:text="1" android:layout_width="30dp" android:gravity="center" android:layout_height="wrap_content"/>
                <Button android:text="+" android:layout_width="40dp" android:layout_height="40dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Repeat above block for other items with appropriate IDs/text -->

        <!-- Promo/Student Code -->
        <TextView
            android:text="Promo/Student code or vouchers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:paddingTop="16dp"
            android:textSize="14sp" />

        <!-- Sub Total and Shipping -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Sub Total"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="$234.30"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Shipping"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="$10.00"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Make Payment Button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make Payment"
            android:backgroundTint="#388E3C"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>
</ScrollView>